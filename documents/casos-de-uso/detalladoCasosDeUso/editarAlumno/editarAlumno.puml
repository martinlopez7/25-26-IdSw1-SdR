@startuml
skinparam linetype polyline

' 1. ESTADO PREVIO (Contexto de origen)
state ALUMNOS_ABIERTO

' 2. ENTRADA AL CASO DE USO
ALUMNOS_ABIERTO -[#green]-> editarAlumno
note on link
editarAlumno(alumno)
end note

' 3. DETALLE DEL PROCESO
state editarAlumno as "editarAlumno(alumno)" {

    state " " as EditandoDatos
    state " " as GuardandoDatos 

    [*] -[#green]-> EditandoDatos 
    note on link
    <b>Docente</b> solicita editar alumno
    end note    
    
    EditandoDatos -[#green]-> GuardandoDatos
    note on link
    <b>Sistema</b> presenta datos de edición
    • DNI (Identificador)
    • Nombre
    • Apellidos
    
    <b>Sistema</b> permite solicitar:
    • modificar campos
    • guardar alumno
    • cancelar edición
    end note
    
    ' Ciclo de modificación
    GuardandoDatos -[#green]-> EditandoDatos
    note on link
    <b>Docente</b> solicita modificar campos
    end note
    
    ' Salida Exitosa (Interna)
    GuardandoDatos -[#green]-> [*]
    note on link
    <b>Docente</b> solicita guardar y salir
    end note

    ' Salida Cancelada (Interna)
    GuardandoDatos -[#red]-> [*]
    note on link
    <b>Docente</b> solicita cancelar edición
    end note
}

' 4. SALIDAS EXTERNAS

' Salida Exitosa con CONFIRMACIÓN (Lo que faltaba)
editarAlumno -[#green]-> ALUMNOS_ABIERTO
note on link
<b>Sistema</b> confirma: "Alumno actualizado"
verAlumnos()
end note

' Salida Cancelada
editarAlumno -[#red]-> ALUMNOS_ABIERTO
note on link
cancelar edición
end note
@enduml