@startuml
skinparam linetype polyline

' 1. ESTADO PREVIO (Contexto de origen: Listado de Docentes)
state DOCENTES_ABIERTO

' 2. ENTRADA AL CASO DE USO
DOCENTES_ABIERTO -[#green]-> editarDocente
note on link
editarDocente(docente)
end note

' 3. DETALLE DEL PROCESO
state editarDocente as "editarDocente(docente)" {

    state " " as EditandoDatos
    state " " as GuardandoDatos 

    [*] -[#green]-> EditandoDatos 
    note on link
    <b>Administrador</b> solicita editar docente
    end note    
    
    EditandoDatos -[#green]-> GuardandoDatos
    note on link
    <b>Sistema</b> presenta datos de edición
    • DNI (Identificador)
    • Nombre, Apellidos
    • Email
    
    <b>Sistema</b> permite solicitar:
    • modificar campos
    • guardar docente
    • cancelar edición
    end note
    
    ' Ciclo de modificación (Patrón Interactivo)
    GuardandoDatos -[#green]-> EditandoDatos
    note on link
    <b>Administrador</b> solicita modificar campos
    end note
    
    ' Salida Exitosa (Interna)
    GuardandoDatos -[#green]-> [*]
    note on link
    <b>Administrador</b> solicita guardar y salir
    end note

    ' Salida Cancelada (Interna)
    GuardandoDatos -[#red]-> [*]
    note on link
    <b>Administrador</b> solicita cancelar edición
    end note
}

' 4. SALIDAS EXTERNAS

' Salida Exitosa con CONFIRMACIÓN
editarDocente -[#green]-> DOCENTES_ABIERTO
note on link
<b>Sistema</b> confirma: "Docente actualizado"
verDocentes()
end note

' Salida Cancelada
editarDocente -[#red]-> DOCENTES_ABIERTO
note on link
cancelar edición
end note
@enduml